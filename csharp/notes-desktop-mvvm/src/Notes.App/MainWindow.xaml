<Window x:Class="Notes.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Notes (MVVM)" Height="520" Width="880"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <!-- ViewModel diinisialisasi sederhana -->
        <local:MainViewModel xmlns:local="clr-namespace:Notes.App.ViewModels"/>
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel kiri: daftar catatan -->
        <Border Padding="8" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,8"
                           Text="Your Notes"/>
                <ListBox ItemsSource="{Binding Items}"
                         SelectedItem="{Binding Selected, Mode=TwoWay}"
                         HorizontalContentAlignment="Stretch">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="0,4" CornerRadius="6" Background="#F7F7F7">
                                <StackPanel>
                                    <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                    <TextBlock FontSize="11" Opacity="0.7"
                                               Text="{Binding UpdatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </Border>

        <!-- Panel kanan: editor -->
        <Border Grid.Column="1" Margin="16,0,0,0"
                Padding="12" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock VerticalAlignment="Center" Text="Title" Margin="0,0,8,0"/>
                    <TextBox Width="420"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Note title"/>
                </StackPanel>

                <TextBox Grid.Row="1"
                         Margin="0,8,0,8"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         Text="{Binding Content, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Write your note here..." />

                <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <Button Content="New"   Padding="12,6" Command="{Binding NewCommand}"/>
                    <Button Content="Add"   Padding="12,6" Command="{Binding AddCommand}"/>
                    <Button Content="Update" Padding="12,6" Command="{Binding UpdateCommand}"/>
                    <Button Content="Remove" Padding="12,6" Command="{Binding RemoveCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
